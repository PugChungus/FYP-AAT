<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_img" id="profile-pic"> 
            <img id="profile-picture" src="../images/account_circle_FILL0_wght200_GRAD200_opsz24.png" alt="Profile Picture">
        </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="/home" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span class="nav_logo-name">JTR</span> </a>
                <div class="nav_list">
                    <a href="/home" class="nav_link active"> 
                        <i class='bx bx-home'></i> 
                        <span class="nav_name">Home</span> 
                    </a>

                    <a href="/encrypt" class="nav_link"> 
                        <i class='bx bxs-lock'></i> 
                        <span class="nav_name">Encrypt</span> 
                    </a>

                    <a href="/decrypt" class="nav_link"> 
                        <i class='bx bxs-lock-open'></i> 
                        <span class="nav_name">Decrypt</span> 
                    </a>

                    <a href="/keymanagement" class="nav_link"> 
                        <i class='bx bx-key'></i> 
                        <span class="nav_name">Key Management</span> 
                    </a>

                    <a href="/history" class="nav_link"> 
                        <i class='bx bx-history'></i> 
                        <span class="nav_name">History</span> 
                    </a>

                    <a href="/fileInbox" class="nav_link"> 
                        <i class='bx bxs-inbox'></i><span class="nav_name">File Inbox</span> 
                    </a>
                </div>
            </div>
            <i class="nav_link" id="signOutLink"> 
                <i class='bx bx-log-out nav_icon' id="signOutIcon"></i>
                <span class="nav_name" id="signOutText">Sign Out</span>
            </i>
        </nav>
    </div>
    <div id="main-content" class="height-80  bg-light">
        <div class="jumbotron" style="padding-top: 80px;">
            <h1 class="display-4">Secure Your Files with JTR</h1>
            <p class="lead">Experience top-notch encryption services for your files.</p>
            <hr class="my-4">
            <p>Our mission is to provide you with the best encryption tools for a secure digital experience.</p>
        </div>
    </div>
    <div class="flex-container">
        <div class="keydiv">
            <div class="keyheader"></div>
            <div class="listkeys"></div>
        </div>
        <div class="historydiv">
            <div class="historyheader">History {counter}<i class='bx bx-chevron-right'></i></div>
        </div>
        <div class="fileinboxdiv">
            <div class="fileinboxheader">Files Recieved {counter}<i class='bx bx-chevron-right'></i></div>
        </div>
    </div>

    <script src="/js/navbar.js"></script>
    <script src="/js/toprofilePage.js"></script>
